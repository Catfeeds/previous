            <script>
				$(function(){
					$(".billboard-tab li").each(function(e){
						$(this).click(function(){
							if($(this).hasClass("on")){
								$(this).parent().find("li").removeClass("on");
								$(this).removeClass("on");
								$(".serch-bar-mask").hide();
							}
							else{
								$(this).parent().find("li").removeClass("on");
								$(this).addClass("on");
								$(".serch-bar-mask").show();
							}
							$(".serch-bar-mask .serch-bar-mask-list").each(function(i){
								
								if(e==i){
									$(this).parent().find(".serch-bar-mask-list").hide();
									$(this).show();
								}
								else{
									$(this).hide();
								}
								$(this).find("li").click(function(){
									$(this).parent().find("li").removeClass("on");
									$(this).addClass("on");
								});
							});
						});
					});
				});
			</script>
