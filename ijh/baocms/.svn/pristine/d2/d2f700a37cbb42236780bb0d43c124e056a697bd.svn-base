<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="target-densitydpi=device-dpi, width=device-width, initial-scale=1, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
<link rel="stylesheet" type="text/css" href="../css/reset.css"/>
<link rel="stylesheet" type="text/css" href="../css/css_1.css"/>
<script src="../js/appcan.js"></script>
<script src="../js/appcan.control.js"></script>
<script src="../js/application.js"></script>
<script src="../js/application.init.js"></script>
</head>

<body>  
    <header>
        <a onclick="baoapp.helper.goback()"><i class="icon-goback"></i></a>
        <div class="title">搜索</div>
         <script>
            $(document).ready(function () {
                $("#search_type").change(function () {
                    $("#search_form").prop('action', $(this).val())
                });
            });
        </script>
    </header>   
    <div id="content">
        <div id="personal" class="page-center-box">
        <div id="scroll">
            <div class="searchNry">
                <div class="searchNry_serBox">
                       
                        <div class="searchNry_sr">
                            <input type="text" placeholder="输入您要搜索的内容" value="" name="keyword"/>
                        </div>
                        <div class="searchNry_but">
                            <input type="button" rel="search_form" value="搜索" onclick="go()"/>
                        </div>
                </div>
            </div>         
        </div>
    </div>  
        
    </div>
    

<footer><script src='../js/application.footer.js'></script></footer>

</script>

<script>
function go()
{
    var val = $('.searchNry_sr input').val();
        val = escape(val);
    appcan.window.close(2);
    with(baoapp.helper){
        linkTo(KEY.TUAN_CAT,'../tuan/cata.html?kword='+val,null,2);
    };
}
appcan.ready(function(){
    var height = baoapp.helper.adapt();
    //keys,keytype
    with(baoapp.helper){
       
        /*++++++导航跳转+++++++*/
       trigger('#f_index', function(){ 
           linkTo('index','../index.html','',2);
       },'click');
       trigger('#f_tuan', function(){ 
           linkTo('tuan_index','../tuan/index.html','',2);
       },'click');
       trigger('#f_coupon',function(){ 
           linkTo('coupon_main','../coupon/main.html','',2);
       },'click');
       trigger('#f_personal',function(){ 
            if(!baoapp.helper.islogin()){
               linkTo('login','../login.html','',11);
            }else{
               linkTo('personal','../mcenter/personal.html','',2);
            }
       },'click');    
       
          /*++++++导航跳转+++++++*/
     baoapp.helper.trigger('#f_personal_other',function(){ 
                   baoapp.helper.linkTo('more','../more.html','',10);
            },'click'); 
    /*++++++导航跳转+++++++*/
       /*++++++导航跳转+++++++*/
   };   
});
</script>
</body>
</html>