<script type="text/javascript">
function city()
{
    with(baoapp.helper){
        linkTo('COMMON_CITY','common/city.html');
    }
}
function find()
{
    with(baoapp.helper){
        linkTo('COMMON_SEARCH','common/search.html');
    }
}
function RegisterCb(opCode, dataType, data){
        if(opCode==0){
            alert("注册成功，token为："+data);
        }else{
            alert("注册失败，错误码："+opCode + "，错误信息："+data);
        }
    }


appcan.ready(function(){ 
    
     //baoapp.gps();
    
     var height = baoapp.helper.adapt();
     $('.city_name').text(city_name);
         try{
             uexJPush.onReceiveNotificationOpen=function(data){
                    alert(data);
             }
             var platform = uexWidgetOne.getPlatform();
             appcan.locStorage.setVal('platform',platform);
         }catch(e){
                console.log(e);
         }
        //加载数据
        //var height = baoapp.helper.adapt();
       //有缓存数据读缓存,没有网络读取
       if(!baoapp.helper.cacheExpireRead(KEY.INDEX_TUAN)){
          baoapp.helper.frameOpen('content','loading.html',height,function(){
                 var url = baoapp.helper.createUrl('index','push');
                 
                 baoapp.helper.ayscLoad(url,null,'GET','json',function(data){

                    if(data.status == 200){
                         //抓取数据写入缓存
                        baoapp.helper.cacheExpireWrite(KEY.INDEX_TUAN, JSON.stringify(data['tuan_list']));
                        baoapp.helper.frameOpen('content','index_content.html',height);
                    }else{
                        baoapp.helper.frameOpen('content','loading_fail.html',height);
                    }
                });          
          });
       }else{
            baoapp.helper.frameOpen('content','index_content.html',height);
       }
       //初次打开当前页为首页
       appcan.locStorage.setVal('CURR_PAGE','index');        
});

</script>

</html>