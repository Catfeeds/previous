.footer .footer_weixin { width:200px; text-align:center; color:#fff; line-height:24px; margin-top:10px; }
.footer .footer_weixin img { width:120px; height:120px; }
.footer i.fotIco { display:inline-block; background:url(../images/footerIco.png) no-repeat; vertical-align:middle; width:22px; height:22px; margin-right:5px; }
.footer i.addIco { background-position:-2px -82px; }
.footer i.emailIco { background-position:0px -58px; }
