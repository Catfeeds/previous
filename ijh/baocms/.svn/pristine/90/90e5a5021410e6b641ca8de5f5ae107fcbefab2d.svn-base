/*头部样式*/
.top_nav { background-color:#323b44; min-width:1200px; }
.top_nav_nr { width:1200px; margin:0 auto; }
.top_nav { height: 100px; width: 100%; background-color: #323b44; }
.top_nav .box { width: 1210px; margin: 0 auto; }
.top_nav .box .left { width:280px; height: 50px; margin:35px 0px 0px 0px; overflow: hidden; float: left; }
.top_nav .box .left img { width:250px; height:30px; }
.top_nav .box .right { float: right; height: 100px; }
.top_nav .box .right ul.nav { width:100%; }
.top_nav .box .right ul.nav .hidden-box { position: absolute; width: 100%; background:rgba(38,46,54,0.9); filter:progid:DXImageTransform.Microsoft.gradient(startColorstr=#BF262e36,endColorstr=#BF262e36);/*ie兼容*/ z-index: 20; padding: 30px 0; left: 0; display: none; }
.top_nav .box .right ul.nav .hidden-box .list { float: left; width: 240px; margin-left: 50px; }
.top_nav .box .right ul.nav .hidden-box .jiazheng_list{ margin-left:492px;}
.top_nav .box .right ul.nav .hidden-box .list ul.hidden-box-child li { color: #fff; font-size: 18px; text-align: left; height:30px; line-height:30px; overflow:hidden; }
.top_nav .box .right ul.nav .hidden-box .list ul.hidden-box-child li.first { padding-bottom: 10px; margin-bottom:10px; border-bottom: 1px solid #888; }
.top_nav .box .right ul.nav .hidden-box .list ul.hidden-box-child li a { color: #fff; font-size:16px; line-height: 30px; }
.top_nav .box .right ul.nav .hidden-box .list ul.hidden-box-child li a:hover { color:#2bb0e1;}
.top_nav .box .right ul.nav .hidden-box .list ul.half li.first { width:100%; }
.top_nav .box .right ul.nav .hidden-box .list ul.half li { float:left; width:120px; }
.top_nav .box .right ul.nav .hidden-box .con { width: 1210px; margin: 0 auto; overflow: hidden; }
.top_nav .box .right ul.nav .hidden-box .con .f-r { float: right; }
.top_nav .box .right ul.nav { overflow: hidden; width: 100%; height: 100%; }
.top_nav .box .right ul.nav li.child { width: 120px; height: 100%; float: left; height: 100%; text-align: center; }
.top_nav .box .right ul.nav li.child.active { background-color: #262e36; }
.top_nav .box .right ul.nav li.child a { font-size: 16px; display: block; color: #ffffff; line-height: 100px; }
.top_nav .box .right ul.nav li.child.active a { color:#42b8f1; }
.top_nav .box .right ul.nav li.has-child i { display: inline-block; margin-left: 5px; background:url(../images/sj-small.png) no-repeat; width:12px; height:12px; vertical-align:middle; transition:all 0.2s ease-in-out; -o-transition:all 0.2s ease-in-out; -moz-transition:all 0.2s ease-in-out; -webkit-transition:all 0.2s ease-in-out; -ms-transition:all 0.2s ease-in-out; }
.top_nav .box .right ul.nav li.has-child.active i { transform: rotate(180deg); -ms-transform:rotate(180deg); /* Internet Explorer */ -moz-transform:rotate(180deg); /* Firefox */ -webkit-transform:rotate(180deg); }
/*头部登录注册*/
.nav_login,.nav_regist{ display:block; float:left; padding-top: 32px;}
.nav_login a,.nav_regist a{font-size: 14px; color: #FFF; height: 35px; line-height: 35px; width: 40px; padding: 6px 8px; text-align: center; margin-left:12px;}
/*头部样式*/

.step_hot { border: 1px solid #EEEEEE; padding: 10px; background: #FFF; border-radius: 2px; line-height: 24px; margin:20px 0px; background:#fff;}
.step_hot h3 { color:#333; font-weight:bold; }
.step_hot a { margin:5px 5px 0px 0px; color:#42b8f1; font-size:14px; height:30px; line-height:30px; display:inline-block; min-width:60px; padding:0px 5px; }
.step_hot a:hover { background:#42b8f1; color:#fff; }

/*左侧菜单部分开始*/
.content{ margin:20px auto;}
.menuSide_cont{ width: 200px; float: left;}
.menuSide{ border: solid 1px #dedede; background-color:#fafafa; display:block;}
.menuSide_list{ width:199px; cursor:pointer;}
.menuSide_list h2{display: block; border-bottom: 1px solid #dedede; height: 43px; line-height: 43px; font-size: 14px; color: #666; padding-left: 25px; position:relative; font-weight:normal;}
.menuSide_list:last-child h2{ border-bottom:none 0;}
.menuSide_list h2:after{position:absolute; right:15px; top:50%; margin-top:-8px; content:''; width:10px; height:10px; border-bottom:2px solid #c9c9c9;border-right:2px solid #c9c9c9;transform:rotate(45deg);-webkit-transform:rotate(45deg);-moz-transform:rotate(45deg);-webkit-transform:rotate(45d eg);-o-transform:rotate(45deg);}
.menuSide_list.on h2{border-right: 2px solid #42b8f1; color: #42b8f1; font-weight: bold; background-color: #fafafa;}
.menuSide_list.on h2:after{transform:rotate(225deg);-webkit-transform:rotate(225deg);-moz-transform:rotate(225deg);-webkit-transform:rotate(225deg);-o-transform:rotate(225deg); margin-top:-2px;}
.menuSide_list_child{width: 100%; background-color: #fff; display: none;}
.menuSide_list_child .list{display: block; border-right: 2px solid #42b8f1; position:relative;}
.menuSide_list_child .list a {display: block; height: 40px; border-bottom: 1px dashed #ececec; line-height: 40px; color: #999; padding-left: 25px;}
.menuSide_list_child .list:last-child a{ border-bottom:1px solid #dedede;}
.menuSide_list_child .list.on:after{ position:absolute; right:0px; top:50%; margin-top:-5px; content:''; border-top: 6px solid transparent; border-bottom: 6px solid transparent; border-right: 7px solid #42b8f1;}
.menuSide_list_child .list.on a{color: #42b8f1;}
.menuSide_list:last-child .menuSide_list_child .list:last-child a{ border-bottom:none 0;}
/*左侧菜单部分结束*/

/*右侧内容部分*/
.wrap_content{ width:930px;}
.wrap_content h3{border-left:4px solid #42b8f1; background:#f1f1f1; margin:10px 0px; padding:5px 10px; line-height:24px; font-weight:bold; font-size:14px; color:#333;}
.wrapBox{ border:1px solid #eee; padding:20px; background:#fff;}
.wrapBox p{ text-indent:2em; margin-bottom:10px; line-height:24px; color:#666;}
.wrapBox p a{ color:#ff6600; text-decoration:underline;}
.wrapBox h4{ font-weight:bold; font-size:14px; color:#333; line-height:30px;}
.wrapBox .indent0{ text-indent:0;}

/*底部样式*/
