    <script>
		$(function(){
			$(".sh_infor_tab li").each(function(e){
				$(this).click(function(){
					$(this).parent().find("li").removeClass("on");
					$(this).addClass("on");
					$(".sh_infor_tab_box").each(function(i){
						if(e==i){
							$(".sh_infor_tab_box").hide();
							$(this).show();
						}
						else{
							$(this).hide();
						}
					});
					
					$(".sh_weinxin_prompt").each(function(a){
						if(e==a){
							$(".sh_weinxin_prompt").hide();
							$(this).show();
						}
						else{
							$(this).hide();
						}
					});
				});
			});
		});
    </script>
