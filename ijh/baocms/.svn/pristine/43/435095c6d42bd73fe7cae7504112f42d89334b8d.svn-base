<!DOCTYPE HTML>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" id="viewport" name="viewport">
<title>家庭保洁</title>
<link rel="stylesheet" type="text/css" href="css/pub_app.css"/>
<link rel="stylesheet" type="text/css" href="css/style.css"/>
<script src="js/jquery.js" type="text/javascript" charset="utf-8"></script>
</head>

<body>
<header class="bg_clor">
	<i class="left"><a id="icon_goback" href="#"></a></i>
    <div class="title">登录</div>
    <i class="right"></i>
</header>
<section class="page_center_box">
    <ul class="form_list_box mt10">
        <li class="pd">
        	<table width="100%">
            	<tr>
                	<th><em class="ico_1"></em></th>
                    <td>
                        <input type="text" placeholder="请输入手机号">
                        <div class="get_yzm">获取验证码</div>
                    </td>
                </tr>
            </table>
        </li>
        <li class="last pd">
        	<table>
            	<tr>
                	<th><em class="ico_2"></em></th>
                    <td>
                        <input type="text" placeholder="请输入验证码">
                    </td>
                </tr>
            </table>
        </li>
    </ul>
    <div class="long_btn_box">
        <input class="long_btn graybg" type="button" value="立即登录">
    </div>
</section>
<script>
$(function(){
	var mobile_timeout;
        var mobile_count = 60;
        var mobile_lock = 0;
        $(function () {
            $(".get_yzm").click(function () {
                if (mobile_lock == 0) {
                    //$.ajax({
//                        url: '<{:U("member/sendsms")}>',
//                        data: 'mobile=' + $("#mobile").val(),
//                        type: 'post'
//                    });
                    mobile_count = 60;
					$(".get_yzm").addClass("on");
                    $('.get_yzm').attr("disabled", "disabled");
                    BtnCount();
                    mobile_lock = 1;
                }

            });
        });
        BtnCount = function () {
            if (mobile_count == 0) {
				$(".get_yzm").removeClass("on");
                $('.get_yzm').removeAttr("disabled");
                $('.get_yzm').text("重新获取");
                mobile_lock = 0;
                clearTimeout(mobile_timeout);
				$('.get_yzm').addClass("on");
            }
            else {
                mobile_count--;
                $('.get_yzm').text( + mobile_count.toString() + "秒...");
                mobile_timeout = setTimeout(BtnCount, 1000);
            }
        };
		//注册页获取验证码部分结束
});
</script>
</body>
</html>
