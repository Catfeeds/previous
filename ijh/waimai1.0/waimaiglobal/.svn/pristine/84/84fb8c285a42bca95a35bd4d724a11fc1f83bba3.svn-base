            <form><input type="text" /></form>
            <div class="forgetPassword_box">
                <a href="#" class="maincl">忘记密码？</a>
            </div>
            <div class="btn_box"><input type="button" class="pub_btn graybg cancel" value="取消" /><input type="button" class="pub_btn confirm" value="支付" /></div>
        </div>
    </div>
	<div class="mask_bg"></div>
</div>
<script>
$(document).ready(function() {
    $(".minePay_show").click(function(){
		$(".minePay_mask").show();
		$(".minePay_mask").parent().find(".mask_bg").show();
	});
	$(".minePay_mask").find(".cancel").click(function(){
		$(".minePay_mask").hide();
		$(".minePay_mask").parent().find(".mask_bg").hide();
	});
	$(".minePay_mask").find(".confirm").click(function(){
		$(".minePay_mask").hide();
		$(".minePay_mask").parent().find(".mask_bg").hide();
	});
});
</script>

<script>
$(document).ready(function(e) {
    /*单选项选择开始*/
	$('.radioLabel').click(function(){
		$('.radioInt').removeClass('on');
		$(this).find('.radioInt').addClass('on');
	});
	/*单选项选择结束*/
});
