<{include file="biz/block/header.html"}>
<div class="ucenter_t">
    <ul>
            <li class="on"><a href="<{link ctl='biz/cate:index'}>">商品分类</a></li>
            <li><a href="<{link ctl='biz/product:index'}>">商品管理</a></li>
    </ul>
    <span class="r"><a href="<{link ctl='biz/cate:create'}>" class="btn btn-success">添加分类</a></span>
</div>
<div class="ucenter_c">
    <table cellspacing="0" cellpadding="0" class="table">
    <tr>
        <th class="w-150">分类ID</th>
        <th>标题</th>
        <th class="w-100">排序</th>
        <th class="w-150">操作</th>
    </tr>
    <{foreach $tree as $v}>
    <tr>
        <td><{$v.cate_id}></td>
        <td><{$v.title}></td>        
        <td><{$v.orderby}></td>
        <td>
            <a href="<{link ctl='biz/cate/edit' args=$v.cate_id}>" class="btn btn-success">修改</a>&nbsp;&nbsp;
            <a href="<{link ctl='biz/cate/delete' args=$v.cate_id}>" mini-act="confirm:确认要删除该分类吗?" class="btn btn-success">删除</a>
        </td>
    </tr>    
    <{foreach $v.childrens as $vv}>
    <tr>
        <td><{$vv.cate_id}></td>
        <td>&nbsp;├──<{$vv.title}></td>      
        <td><{$vv.orderby}></td>
        <td>
            <a href="<{link ctl='biz/cate/edit' args=$vv.cate_id}>" class="btn btn-success">修改</a>&nbsp;&nbsp;
            <a href="<{link ctl='biz/cate/delete' args=$vv.cate_id}>" mini-act="confirm:确认要删除该分类吗?" class="btn btn-success">删除</a>
        </td>
    </tr>
    <{/foreach}>    
    <{foreachelse}>
    <tr><td colspan="20"><div class="alert alert-info">没有数据</div></td></tr>
    <{/foreach}>
    <tr>
    </table>
    <div class="page"><{$pager.pagebar}></div>
</div>
<{include file="biz/block/footer.html"}>