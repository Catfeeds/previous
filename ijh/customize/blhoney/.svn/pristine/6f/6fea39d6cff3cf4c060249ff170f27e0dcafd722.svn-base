<!DOCTYPE HTML>
<html>
    <head>
        <{include file="block/sheader.html"}>
    </head>
    <body>
        <header>
            <i class="left"><a href="" class="gobackIco"></a></i>
            <div class="title">
                在线支付
            </div>
            <i class="right"><a class="" href="#"></a></i>
        </header>
        <section class="page_center_box">
            <div class="minePay">
                <ul class="form_list_box">
                    <li class="recharge last" style="background:#fff4d5; line-height:0.3rem;">
                        <p class="fl pointcl1">订单总价</p>
                        <p class="fr pointcl1">￥<{$detail.amount}></p>
                    </li>
                </ul>
                <div>
                    <ul class="payWay">
                        <{if !$weixin}>
                        <li><p class="bt fl">第三方支付平台应支付</p><p class="fr bt pointcl1">￥<{$detail.amount}></p><div class="clear"></div></li>
                        <li>
                            <label class="radioLabel">
                                <div class="fl">
                                    <em class="ico_1"></em>
                                    <p class="overflow_clear bt">支付宝</p>
                                    <p class="overflow_clear black9">推荐已安装支付宝客户端的用户使用</p>
                                </div>
                                <span class="fr radioInt on"><input name="pay_code" value="alipay" type="radio"></span>
                                <div class="clear"></div>
                            </label>
                        </li>
                        <{/if}>
                        <{if $weixin == 1}>
                        <li>
                            <label class="radioLabel">
                                <div class="fl">
                                    <em class="ico_3"></em>
                                    <p class="overflow_clear bt">微信</p>
                                    <p class="overflow_clear black9">推荐已安装微信客户端的用户使用</p>
                                </div>
                                <span class="fr radioInt"><input name="pay_code" value="wxpay" type="radio"></span>
                                <div class="clear"></div>
                            </label>
                        </li>
                        <{/if}>
                        <li>
                            <label class="radioLabel">
                                <div class="fl">
                                    <em class="ico_4"></em>
                                    <p class="overflow_clear bt">余额支付</p>
                                    <p class="overflow_clear black9">推荐余额足够的用户使用，您的余额<{$MEMBER.money}></p>
                                </div>
                                <span class="fr radioInt"><input name="pay_code" value="money" type="radio"></span>
                                <div class="clear"></div>
                            </label>
                        </li>
                        <li class="list last" id="use_money">
                             <p class="" style="line-height:0.2rem;clear:both;margin-top:10px;">余额信息&nbsp;&nbsp;&nbsp;<{if $MEMBER['money']>0}><font size="2" color="#ff2121">我的余额&nbsp;<{$MEMBER['money']}>&nbsp;可抵扣&nbsp;<{$detail.amount}></font><{/if}></p>
                            <div class="figure_password">
                                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                    <tr>
                                        <td width="60">支付密码</td>
                                        <td><span><input type="password" name="params[passwd]" id="figure_password_int" class="password_int" placeholder="请输入密码" value=""></span></td>
            
                                    </tr>
                                </table>
                            </div>
                        </li>
                    </ul>
                    <div class="long_btn_box"><input type="button" onclick="orderpay();" class="long_btn minePay_show" value="确认支付" /></div>
                </div>
            </div>
        </section>
        <script>
            var pay_code = '';
            $(document).ready(function () {
                $('#use_money').hide();
                /*单选项选择开始*/
                $('.radioLabel').click(function () {
                    $('.radioInt').removeClass('on');
                    $(this).find('.radioInt').addClass('on');
                    pay_code = $('.radioInt.on').find("input[name='pay_code']").val();
                    if(pay_code == 'money') {
                        $('#use_money').show();
                    }else {
                        $('#use_money').hide();
                    }
                });
                
                var link = "<{$detail.link}>";
                $('.gobackIco').attr('href', link);
    
            });

            function orderpay() {
                pay_code = $('.radioInt.on').find("input[name='pay_code']").val();
                var order_id = "<{$detail.order_id}>";
                var kind = "<{$detail.kind}>";
                var figure = $('#figure_password_int').val();
                var link = "<{link ctl='trade/payment/order' arg0=codes arg1=orders arg2=kind arg3=figure}>";
                window.location.href = link.replace('codes', pay_code).replace('orders', order_id).replace('kind', kind).replace('figure', figure);
            }
        </script>
    </body>
</html>
